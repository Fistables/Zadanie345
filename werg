print("Задание 1 из 1го файла")
class StringVar:
    text: str
    def __init__(self, text: str):
        self.set(text)
    def get(self) -> str:
        return self.text
    def set(self, text: str):
        assert isinstance(text, str), "Используйте только тип строка!"
        self.text = text

print("Задание 2 из 1го файла")
class Point:
    def __init__(self, x: int, y: int):
        self.x, self.y = x, y

print("Задание ... из 2го файла")
import json
class Model:
    title = '1'
    text = '2'
    author = '3'
    def save(self):
      dct = {k: str(v) for k, v in vars(Model).items()}
      with open('file.txt', 'w', encoding='utf-8') as fout:
          json.dump(dct, fout)
obj = Model()
obj.save()
